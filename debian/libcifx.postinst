#!/bin/sh 

set -e
case "$1" in
    configure)
    chgrp users /opt/cifx/
    chgrp users /opt/cifx/deviceconfig

    chmod ug+rwx /opt/cifx /opt/cifx/deviceconfig
    chmod +t /opt/cifx /opt/cifx/deviceconfig
    ;;
    abort-upgrade|abort-remove|abort-deconfigure)
    ;;
    *)
    echo "$0 called with unknown argument '$1'" >&2
    exit 0
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts

#DEBHELPER#

exit 0
